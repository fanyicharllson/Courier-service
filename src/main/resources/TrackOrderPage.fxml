<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.courier.controllers.TrackOrdersController"
            stylesheets="/styles/TrackPage.css" style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #1565C0);">
    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: #0D47A1;">
            <Label text="Track Orders" style="-fx-font-size: 28; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    <center>
        <VBox>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Show My Orders" prefWidth="150.0"
                        style="-fx-background-color: #e91e63; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                        onAction="#handleShowOrders"/>
                <Button text="Back to Dashboard" prefWidth="150.0"
                        style="-fx-background-color: #e91e63; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                        onAction="#handleBackToDashboard"/>
            </HBox>
            <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-tab-min-width: 120; -fx-tab-max-width: 120;">
                <!-- Track Order Details Tab -->
                <Tab text="Track Orders">
                    <StackPane>
                        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                            <ListView fx:id="trackOrdersListView" prefHeight="400.0" prefWidth="400.0"
                                      style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-padding: 10;
                                 -fx-border-color: #0D47A1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"/>
                            <ProgressBar fx:id="progressBar" visible="false" prefWidth="300"
                                         styleClass="custom-progress-bar"/>
                        </VBox>
                    </StackPane>
                    <ProgressIndicator fx:id="progressIndicator" visible="false"
                                       style="-fx-scale-x: 1.5; -fx-scale-y: 1.5;" styleClass="progress-indicator"/>
                </Tab>

                <!-- Company Details Tab -->
                <Tab text="Company Details">
                    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                        <Label text="Company Details"
                               style="-fx-font-size: 20; -fx-text-fill: #0D47A1; -fx-font-weight: bold;"/>
                        <ListView fx:id="companyDetailsListView" prefHeight="400.0" prefWidth="400.0"
                                  style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-padding: 10;
                             -fx-border-color: #0D47A1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"/>
                    </VBox>
                </Tab>

                <!-- Hub Rates Tab -->
                <Tab text="Hub Rates">
                    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                        <Label text="Hub Rates"
                               style="-fx-font-size: 20; -fx-text-fill: #0D47A1; -fx-font-weight: bold;"/>
                        <ListView fx:id="hubRatesListView" prefHeight="400.0" prefWidth="400.0"
                                  style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-padding: 10;
                             -fx-border-color: #0D47A1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"/>
                    </VBox>
                </Tab>

                <!-- Delivery Details Tab -->
                <Tab text="Delivery Details">
                    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                        <Label text="Delivery Details"
                               style="-fx-font-size: 20; -fx-text-fill: #0D47A1; -fx-font-weight: bold;"/>
                        <ListView fx:id="deliveryDetailsListView" prefHeight="400.0" prefWidth="400.0"
                                  style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-padding: 10;
                             -fx-border-color: #0D47A1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"/>
                    </VBox>
                </Tab>

                <!-- Reviews Tab -->
                <Tab text="Reviews">
                    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                        <Label text="Reviews"
                               style="-fx-font-size: 20; -fx-text-fill: #0D47A1; -fx-font-weight: bold;"/>
                        <ListView fx:id="reviewsListView" prefHeight="400.0" prefWidth="400.0"
                                  style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-padding: 10;
                             -fx-border-color: #0D47A1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"/>
                    </VBox>
                </Tab>
            </TabPane>
        </VBox>
    </center>
</BorderPane>
